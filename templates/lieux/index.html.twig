{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ page_name }}{% endblock %}

{% block body %}
    <div class="jumbotron mt-2">
        <h1 class="text-center display-4 lead">{{ page_name }}</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('add_lieu') }}" class="btn btn-primary w-100 mt-4 mb-4">Add Lieu</a>
        {% endif %}
        <table class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark text-center">
            <tr>
                <th scope="col">#</th>
                <th scope="col">nom Lieu</th>
                <th scope="col">rue</th>
                <th scope="col">latitude</th>
                <th scope="col">longitude</th>
                <th scope="col">Ville</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th scope="col">Action</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% if lieux is defined and lieux is not empty %}
                {% for lieu in lieux %}
                    <tr class="text-center">
                        <td scope="row">{{ lieu.id }}</td>
                        <td scope="row">{{ lieu.nomLieu }}</td>
                        <td scope="row">{{ lieu.rue}}</td>
                        <td scope="row">{{ lieu.latitude }}</td>
                        <td scope="row">{{ lieu.longitude}}</td>
                        <td scope="row">{{ lieu.ville.nomVille}}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td scope="row"><a href="{{ path('delete_lieu', {'id': lieu.id}) }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                <a href="{{ path('edit_lieu', {'id': lieu.id}) }}" class="btn btn-success"><i class="far fa-edit"></i></a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <tr class="text-center">
                    <th class="text-center text-muted" scope="row" colspan="7">No Lieux found...</th>
                </tr>
            {% endif %}
            </tbody>
        </table>

    </div>
{% endblock %}
