{% extends 'base.html.twig' %}

{% block title %}Hello SortiesController!{% endblock %}

{% block body %}
    <div class="jumbotron mt-2">
        <h1 class="text-center display-4 lead">{{ page_name }}</h1>
        <table class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark text-center">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Début</th>
                <th scope="col">Fin</th>
                <th scope="col">Durée</th>
                <th scope="col">Nombre max</th>
                <th scope="col">Description</th>
                <th scope="col">Campus</th>
            </tr>
            </thead>
            <tbody>
            {% if sorties is defined and sorties is not empty %}
                {% for sortie in sorties %}
                    <tr class="text-center">
                        <td scope="row">{{ sortie.id }}</td>
                        <td scope="row">{{ sortie.nom }}</td>
                        <td scope="row">{{ sortie.datedebut|date('Y-m-d')}}</td>
                        <td scope="row">{{ sortie.datecloture|date('Y-m-d') }}</td>
                        <td scope="row">{{ sortie.duree }}</td>
                        <td scope="row">{{ sortie.nbinscriptionsmax }}</td>
                        <td scope="row">{{ sortie.descriptioninfos }}</td>
                        <td scope="row">{{ sortie.campus.nomCampus }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr class="text-center">
                    <th class="text-center text-muted" scope="row" colspan="4">No Sortie found...</th>
                </tr>
            {% endif %}
            </tbody>
        </table>

    </div>
{% endblock %}
