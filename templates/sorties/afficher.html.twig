{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ page_name }}{% endblock %}

{% block body %}
    <div class="jumbotron mt-2">
        <h1 class="text-center display-4 lead">{{ page_name }}</h1>
        <div id="listSorties" class="container">
            <div id="rowSortie" class="row">
                <div class="col-sm">
                    Nom de la sortie :
                </div>
                <div class="col-sm">
                    {{ sortie.nom }}
                </div>
                <div class="col-sm">
                    Campus :
                </div>
                <div class="col-sm">
                    {{ sortie.campus.nomCampus }}
                </div>
            </div>
            <div id="rowSortie" class="row">
                <div class="col-sm">
                    Date et heure de la sortie :
                </div>
                <div class="col-sm">
                    {{ sortie.datedebut|date('Y-m-d') }}
                </div>
                <div class="col-sm">
                    Lieu :
                </div>
                <div class="col-sm">
                    {{ sortie.lieu.nomLieu }}
                </div>
            </div>
            <div id="rowSortie" class="row">
                <div class="col-sm">
                    Date limite d'inscription :
                </div>
                <div class="col-sm">
                    {{ sortie.datecloture|date('Y-m-d') }}
                </div>
                <div class="col-sm">
                    Rue :
                </div>
                <div class="col-sm">
                    {{ sortie.lieu.rue }}
                </div>
            </div>
            <div id="rowSortie" class="row">
                <div class="col-sm">
                    Nombre de places :
                </div>
                <div class="col-sm">
                    {{ sortie.nbinscriptionsmax  }}
                </div>
                <div class="col-sm">
                    Code postal :
                </div>
                <div class="col-sm">
                    {{ sortie.lieu.ville.codePostal }}
                </div>
            </div>
            <div id="rowSortie" class="row">
                <div class="col-sm">
                    Dur√©e :
                </div>
                <div class="col-sm">
                    {{ sortie.duree  }} minutes
                </div>
                <div class="col-sm">
                    Latitude :
                </div>
                <div class="col-sm">
                    {{ sortie.lieu.latitude }}
                </div>
            </div>
            <div id="rowSortie" class="row">
                <div class="col-sm">
                    Description et infos :
                </div>
                <div class="col-sm">
                    {{ sortie.descriptioninfos  }}
                </div>
                <div class="col-sm">
                    Longitude :
                </div>
                <div class="col-sm">
                    {{ sortie.lieu.longitude }}
                </div>
            </div>
        </div>

        <div id="listParticipants" class="container">
            <div id="titleParticipants" class="row">
                Liste des participants :
            </div>
            <div class="row">
                <table id="tableParticipants" class="table table-striped table-bordered" style="width:100%">
                    <thead class="thead-dark text-center">
                    <tr>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Nom</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if participants is not empty %}
                        {% for participant in participants %}
                        <tr class="text-center">
                            <td scope="row">{{ participant.participant.pseudo }}</td>
                            <td scope="row"> {{ participant.participant.prenom }} {{ participant.participant.nom }}</td>
                        </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}