{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ page_name }}{% endblock %}

{% block body %}
    <div class="jumbotron mt-2" xmlns="http://www.w3.org/1999/html">
        <h1 class="text-center display-4 lead">{{ page_name }}</h1>

        <form method="post" action="{{ path('security_login') }}">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="exampleInputEmail1">Nom d'utilisateur</label>
                <input type="text" class="form-control" id="_username" name="_username" placeholder="Nom d'utilisateur..." value="{{ last_username }}">

                <label for="exampleInputPassword1">Mot de passe</label>
                <input type="password" class="form-control" id="_password" name="_password" placeholder="Mot de passe..." value="">

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="_remember_me" checked>
                    <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                </div>
            </div>

            <div class="form-group">
                <a href="{{ path('add_participants') }}">Inscrivez-vous !</a>
            </div>

            <div class="form-group">
                <a href="">Mot de passe oubli√©...</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary">Se connecter</button>

        </form>
    </div>

{% endblock %}
