{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ page_name }}{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link {% if current_path == "users" %}active{% endif %}" href="{{ path('users') }}">{{ page_name }}</a>
                </li>
            </ul>
        </div>
        <div class="card-body text-center">
            <h1 class="lead font-weight-bold">{{ page_name }}</h1>
            <table id="tableUser" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark text-center">
                    <tr>
                        <td>#</td>
                        <td>ID</td>
                        <td>Pseudo</td>
                        <td>Nom</td>
                        <td>Prenom</td>
                        <td>Telephone</td>
                        <td>Mail</td>
                        <td>Campus</td>
                        <td>Actif</td>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="text-center">
                            <td>
                                {% if user.photo is not null %}
                                    <img class="img-profile rounded-circle" src="{{ asset('files/photo/' ~ user.photo) }}">
                                {% else %}
                                    <i class="fas fa-user-circle"></i>
                                {% endif %}
                            </td>
                            <td>{{ user.id }}</td>
                            <td>{{ user.pseudo }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.telephone }}</td>
                            <td>{{ user.mail }}</td>
                            <td>{{ user.campus.nomCampus }}</td>
                            {% if user.actif %}
                                <td class="text-success" data-value="{{ user.actif }}">
                                    <i class="fas fa-check-circle"></i>
                                </td>
                            {% else %}
                                <td class="text-danger" data-value="{{ user.actif }}">
                                    <i class="fas fa-times-circle"></i>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalUser" tabindex="-1" role="dialog" aria-labelledby="modalUser" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form(form) }}
                    <button id="confirmDeleteBtn" type="button" class="btn btn-danger w-100">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="modalConfirmDelete" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Voulez-vous vraiment supprimer l'utilisateur ?</p>
                    <form method="post" action="{{ path('delete_users') }}">
                        <input name="participants[id]" type="integer" hidden>
                        <div class="btn-group w-100">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}