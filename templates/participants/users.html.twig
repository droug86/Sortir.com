{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ page_name }}{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link {% if current_path == "users" %}active{% endif %}" href="{{ path('users') }}">Utilisateurs</a>
                </li>
            </ul>
        </div>
        <div class="card-body text-center">
            <table class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark text-center">
                    <tr>
                        <td>#</td>
                        <td>Pseudo</td>
                        <td>Nom</td>
                        <td>Prenom</td>
                        <td>Telephone</td>
                        <td>Mail</td>
                        <td>Campus</td>
                        <td>Actif</td>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="text-center">
                            <td>
                                {% if app.user.photo is not null %}
                                    {{ user.photo }}
                                {% else %}
                                    <i class="fas fa-user-circle"></i>
                                {% endif %}
                            </td>
                            <td>{{ user.pseudo }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.telephone }}</td>
                            <td>{{ user.mail }}</td>
                            <td>{{ user.campus }}</td>
                            <td>{{ user.actif }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}