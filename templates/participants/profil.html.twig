{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ page_name }}{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link {% if not edit %}active{% endif %}" href="{{ path('profil') }}">Profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if edit %}active{% endif %}" href="{{ path('profil_edit') }}">Edition</a>
                </li>
            </ul>
        </div>
        <div class="card-body row">
            <div class="col-4 text-center">
                {% if app.user.photo is not null %}
                    <img class="img-profile-2 rounded-circle" src="{{ asset('files/photo/' ~ app.user.photo) }}" alt="{{ app.user.username }}">
                {% else %}
                    <i class="fas fa-user-circle fa-9x"></i>
                {% endif %}
                <h1>{{ app.user.nom }} {{ app.user.prenom }}</h1>
                <p class="title">({{ app.user.pseudo }})</p>
                <p>{{ app.user.mail }}</p>
                {% if app.user.mail is not null %}
                    <a href="#"><i class="fas fa-at"></i> {{ app.user.mail }}</a>
                {% endif %}
                {% if app.user.telephone is not null %}
                    <a href="#"><i class="fas fa-phone"></i> {{ app.user.telephone }}</a>
                {% endif %}
            </div>
            <div class="col-8">
            {% if not edit %}
                    <h1><i class="fas fa-university"></i> Campus</h1>
                    <div class="list-group">
                        {% if app.user.campus is not null %}
                            <a class="list-group-item list-group-item-action" href="#">{{ app.user.campus.nomCampus }}</a>
                        {% else %}
                            <a class="list-group-item list-group-item-action" href="#">Pas de campus pour le momment</a>
                        {% endif %}
                    </div>
            {% else %}
                {% if form is not null %}
                    <form method="post" action="{{ path('profil_edit') }}">
                        {{ form(form, {'multipart': true}) }}
                    </form>
                {% endif %}
            {% endif %}
            </div>
        </div>
    </div>

{% endblock %}